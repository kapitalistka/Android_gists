<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="32dp"
    android:clipToPadding="false"
    android:paddingBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/dateFilterDefaultText"
        android:textAppearance="@style/param_output_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        tools:text="@string/title_date_filter"/>
    <LinearLayout
        android:id="@+id/dateFilterClearableView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:gravity="center_vertical"
        android:background="?android:windowBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:elevation="4dp">
        <TextView
            android:id="@+id/dateFilterClearableText"
            android:textAppearance="@style/TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/title_date_filter"/>

        <ImageButton
            android:id="@+id/dateFilterClearableButton"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:src="@drawable/ic_clear_date_filters"
            android:padding="8dp"
            android:contentDescription="@null"
            android:background="?selectableItemBackgroundBorderless" />
    </LinearLayout>
</FrameLayout>